<div class="row">
  <div class="col-md-6 offset-md-3">
<h2 class="text-center">Entrar</h2>

<div class="form-group">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


   <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
<br />
    <%= f.password_field :password, autocomplete: "current-password",  class: "form-control",  placeholder: "Senha"  %>
<br />
  <% if devise_mapping.rememberable? %>
   <div class="form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <label class="form-check-label" for="exampleCheck1">Lembrar</label>
    </div>
  </div>
  
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>

</div>
</div>
